{
  "source": ["properties/**/*.json"],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "build/scss/",
      "files": [{
          "destination": "colors.scss",
          "format": "scss/variables",
          "filter": "isColor"
        },
        {
          "destination": "fonts.scss",
          "format": "scss/variables",
          "filter": "isFontSize"
        }
      ]
    },
    "css": {
      "transformGroup": "css",
      "buildPath": "build/css/",
      "files": [{
          "destination": "colors.css",
          "format": "css/variables",
          "filter": "isColor"
        },
        {
          "destination": "fonts.css",
          "format": "css/variables",
          "filter": "isFontSize"
        }
      ]
    },
    "cssUtilities": {
      "buildPath": "build/utilities/",
      "transformGroup": "css",
      "files": [{
        "destination": "utilities.css",
        "format": "utilityClass",
        "filter": "isNotBase"
      }]
    },
    "sassUtilities": {
      "buildPath": "build/utilities/",
      "transformGroup": "scss",
      "files": [{
        "destination": "utilities.scss",
        "format": "utilityClass",
        "filter": "isNotBase"
      }]
    },
    "js": {
      "transformGroup": "js",
      "buildPath": "build/js/",
      "files": [{
        "destination": "colors.js",
        "format": "javascript/module",
        "filter": "isColor"
      }, {
        "destination": "fonts.js",
        "format": "javascript/module",
        "filter": "isFontSize"
      }]
    }
  }
}