{
  "source": ["properties/**/*.json"],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "build/scss/",
      "files": [{
        "destination": "colors.scss",
        "format": "scss/variables",
        "filter": "isColor"
      }]
    },
    "css": {
      "transformGroup": "css",
      "buildPath": "build/css/",
      "files": [
        {
          "destination": "colors.css",
          "format": "css/variables",
          "filter": "isColor"
        }
      ]
    },
    "js": {
      "transformGroup": "js",
      "buildPath": "build/js/",
      "files": [
        {
          "destination": "colors.js",
          "format": "javascript/module",
          "filter": "isColor"
        }
      ]
    }
  }
}