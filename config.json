{
  "source": ["properties/**/*.json"],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "build/scss/",
      "files": [{
          "destination": "colors.scss",
          "format": "scss/variables",
          "filter": "isCategoryColor"
        },
        {
          "destination": "sizes.scss",
          "format": "scss/variables",
          "filter": "isCategorySize"
        }
      ]
    },
    "css": {
      "transformGroup": "css",
      "buildPath": "build/css/",
      "files": [{
          "destination": "colors.css",
          "format": "css/variables",
          "filter": "isCategoryColor"
        },
        {
          "destination": "sizes.css",
          "format": "css/variables",
          "filter": "isCategorySize"
        }
      ]
    },
    "cssUtilities": {
      "buildPath": "build/utilities/",
      "transformGroup": "css",
      "files": [{
        "destination": "utilities.css",
        "format": "utilityClass",
        "filter": "isNotTypeBase"
      }]
    },
    "sassUtilities": {
      "buildPath": "build/utilities/",
      "transformGroup": "scss",
      "files": [{
        "destination": "utilities.scss",
        "format": "utilityClass",
        "filter": "isNotTypeBase"
      }]
    },
    "js": {
      "transformGroup": "js",
      "buildPath": "build/js/",
      "files": [{
        "destination": "colors.js",
        "format": "javascript/module",
        "filter": "isCategoryColor"
      }, {
        "destination": "sizes.js",
        "format": "javascript/module",
        "filter": "isCategorySize"
      }]
    }
  }
}